const { slug } = Astro.params;
const { company } = Astro.props;
---

<Layout 
    title={company.name}
    description={`${company.name} - Professional security system installation services in ${company.region}. Specializing in ${company.services.join(', ')}.`}>
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="p-8">
                    <div class="flex justify-between items-start mb-6">
                        <h1 class="text-4xl font-bold">{company.name}</h1>
                        {company.isFeatured && (
                            <span class="bg-blue-500 text-white px-4 py-1 rounded-full text-sm">Featured</span>
                        )}
                    </div>

                    <div class="mb-8">
                        <h2 class="text-2xl font-semibold mb-4">About Us</h2>
                        <p class="text-gray-700">{company.longDescription}</p>
                    </div>

                    <div class="grid md:grid-cols-2 gap-8">
                        <div>
                            <h2 class="text-2xl font-semibold mb-4">Services</h2>
                            <ul class="space-y-2">
                                {company.services.map(service => (
                                    <li class="flex items-center">
                                        <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        {service}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <div>
                            <h2 class="text-2xl font-semibold mb-4">Contact Information</h2>
                            <div class="space-y-3">
                                <p><strong>Location:</strong> {company.region}</p>
                                <p><strong>Phone:</strong> {company.phone}</p>
                                <p><strong>Email:</strong> {company.email}</p>
                                <p><strong>Hours:</strong> {company.operatingHours}</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-8">
                        <h2 class="text-2xl font-semibold mb-4">Certifications</h2>
                        <div class="flex flex-wrap gap-2">
                            {company.certifications.map(cert => (
                                <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">
                                    {cert}
                                </span>
                            ))}
                        </div>
                    </div>

                    <div class="mt-8">
                        <div class="mt-8 flex gap-4">
                            <a 
                                href={`tel:${company.phone}`}
                                class="flex-1 bg-green-600 text-white py-3 px-6 rounded-lg text-center font-semibold hover:bg-green-700 transition-colors">
                                Call Now
                            </a>
                            <a 
                                href={company.website} 
                                target="_blank" 
                                rel="noopener noreferrer"
                                class="flex-1 bg-blue-600 text-white py-3 px-6 rounded-lg text-center font-semibold hover:bg-blue-700 transition-colors">
                                Visit Website
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>